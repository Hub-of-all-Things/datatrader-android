<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="#00000000"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_height="wrap_content">

    <Button
            android:text="Disable tool"
            android:layout_width="match_parent"
            android:background="@drawable/white_layout_without_border"
            android:layout_height="wrap_content" android:id="@+id/disable_tool_bottom_sheet"
            android:textColor="#e36682"
            android:fontFamily="@font/roboto_medium" android:textAllCaps="false" android:textSize="13sp"/>
    <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:background="@drawable/white_layout_without_border"
            android:layout_height="wrap_content" android:id="@+id/cancel_btn_tool_bottom_sheet"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false" android:textSize="13sp"/>
</LinearLayout>