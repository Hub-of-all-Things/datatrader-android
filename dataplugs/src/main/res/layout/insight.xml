<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
              android:paddingBottom="5dp"
>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="70dp"
                  android:background="@drawable/transparent_rounded_top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/insightHeader"
                   />

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="70dp"
                      android:gravity="center_vertical"
                      android:paddingStart="20dp"
                      android:paddingEnd="20dp"
                      android:orientation="vertical"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="" android:textSize="13sp" android:fontFamily="@font/roboto_bold"
                      android:textColor="@android:color/white" android:id="@+id/insightTitle"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="" android:fontFamily="@font/roboto"
                      android:textColor="@android:color/white" android:id="@+id/insightSubtitle"
                      android:textSize="11sp"/>
        </LinearLayout>
        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:src="@drawable/insight_header_small_img"
                   android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                   android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/white_bottom_corners_rounded"
                  android:orientation="vertical"
                  android:elevation="3dp"
                  android:clipToPadding="false"
                  android:layout_marginBottom="8dp"
                  android:paddingBottom="5dp"
                  android:paddingStart="3dp"
                  android:paddingEnd="3dp"
                  android:layout_marginStart="15dp"
                  android:layout_marginEnd="15dp">
    <com.hubofallthings.hatappandroid.view.NonScrollListView
            android:id="@+id/insightListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"

            android:layout_gravity="end"
            android:divider="@drawable/insight_list_divider"
            android:clickable="false"
            android:dividerHeight="1.0sp"
            android:scrollbarStyle="outsideOverlay"/>

    </LinearLayout>
</LinearLayout>