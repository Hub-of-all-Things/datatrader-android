<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="30dp">
    <include
            android:id="@+id/dateFeedLay"
            layout="@layout/date_feed" />

    <LinearLayout
            android:id="@+id/feedListRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_public_profile"/>

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_marginTop="13dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/triangle" />

        <LinearLayout
                android:id="@+id/linerFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layout_rounded"
                    android:id="@+id/title_layout">
                <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingBottom="5dp"

                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingTop="5dp"
                        android:text="Title"
                        android:textColor="#474747"/>

                <TextView
                        android:id="@+id/txtSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:background="@drawable/feed_subtitle_bordertop"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="Subtitle"
                        android:textColor="#9e9e9e" android:textSize="12sp"/>

            </LinearLayout>


            <TextView
                    android:id="@+id/timeFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="11:00 "
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>