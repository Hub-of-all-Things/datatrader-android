<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="top|center"
              android:paddingTop="60dp"
              android:background="#f5f5f5"
    >
    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
    android:src="@drawable/hat_logo_small"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/loading_data"
              android:textColor="#4a556b"
              android:fontFamily="@font/roboto"
              android:layout_marginTop="20dp"
              android:textSize="18sp"
              android:textAlignment="center"
              android:textStyle="bold" android:id="@+id/feed_msg_title"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/data_few_minutes"
              android:paddingStart="25dp"
              android:paddingEnd="25dp"
              android:fontFamily="@font/roboto"
              android:textAlignment="center" android:id="@+id/feed_msg_subtitle"/>
</LinearLayout>