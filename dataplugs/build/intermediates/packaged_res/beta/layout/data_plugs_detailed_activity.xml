<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:id="@+id/scroll_view_details">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#f5f5f5"
                  android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:id="@+id/dataplugs_detailed_header">
            <ImageView android:layout_width="40dp"
                       android:layout_height="wrap_content"
                       android:elevation="2dp"
                       android:layout_marginTop="@dimen/bar_padding"
                       android:id="@+id/back_button_dataplugs_details"
                       android:src="@drawable/arrow_back_toolbar" android:layout_alignParentStart="true"
                       android:layout_marginStart="10dp" android:layout_alignParentTop="true"/>
            <ImageView
                    android:id="@+id/header_img"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/background_header"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="295dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">


                <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.052083332"/>

                <android.support.constraint.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.9557292"/>

                <View
                        android:id="@+id/view_dataplugs"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="5dp"

                        android:background="@drawable/white_layout_without_border"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>

                <ImageView
                        android:id="@+id/data_plugs_details_img"
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:elevation="5dp"

                        android:background="@drawable/icon_profile_bg"
                        app:layout_constraintBottom_toTopOf="@+id/view_dataplugs"
                        app:layout_constraintDimensionRatio="w,1:1"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="@+id/view_dataplugs"
                        app:srcCompat="@drawable/hat_logo_small" app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintVertical_bias="0.421"/>

                <TextView
                        android:id="@+id/data_plugs_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:elevation="5dp"

                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/your_hat_name"
                        android:textAlignment="center"
                        android:textColor="#4a556c"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/data_plugs_details_img"
                        app:layout_constraintStart_toStartOf="@+id/data_plugs_details_img"
                        app:layout_constraintTop_toBottomOf="@+id/data_plugs_details_img"
                        android:layout_marginTop="12dp"
                />

                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:elevation="5dp"

                        android:id="@+id/data_plugs_datails_status"
                        app:layout_constraintStart_toStartOf="@+id/view_dataplugs" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/view_dataplugs" android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/data_plugs_details_name"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="wrap_content"
                              android:elevation="5dp"

                              app:layout_constraintBottom_toBottomOf="@+id/view_dataplugs"
                              app:layout_constraintTop_toBottomOf="@+id/data_plugs_datails_status"
                              app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                              app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp">
                    <TextView
                            android:text="@string/error_data_plug"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:paddingStart="35dp"
                            android:paddingEnd="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/dataPlugErrorMsg"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto"
                            android:textSize="12sp"
                            android:textColor="#e36682"
                            android:visibility="gone"/>
                    <TextView
                            android:text="@string/app_rating_learn_more"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="35dp"
                            android:paddingEnd="35dp"
                            android:id="@+id/dataPlugRatingMsg"
                            android:textAlignment="center" android:fontFamily="@font/roboto" android:textSize="12sp"
                            android:textColor="#9a9a9a" android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="38dp" app:srcCompat="@drawable/rate_view"
                        android:id="@+id/ratingView"
                        android:elevation="5dp"

                        app:layout_constraintBottom_toTopOf="@+id/data_plugs_details_name"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintTop_toTopOf="@+id/view_dataplugs" android:layout_marginTop="8dp"
                        app:layout_constraintVertical_bias="1.0" android:visibility="visible"/>
                <TextView
                        android:text="A*A*A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"

                        android:id="@+id/rating_txt"
                        app:layout_constraintBottom_toBottomOf="@+id/ratingView" android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toTopOf="@+id/ratingView" android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/ratingView" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="@+id/ratingView" android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_bold" android:textSize="12sp" android:textColor="#ffffff"
                        android:textStyle="bold"/>


            </android.support.constraint.ConstraintLayout>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="64dp"

                    app:srcCompat="@drawable/settings_on_preview_icon"
                    android:id="@+id/bottom_sheet_button" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/dataplugs_detailed_layout"
                      android:background="#f5f5f5"
        >

            <android.support.design.widget.TabLayout
                    android:id="@+id/dataplugsTabs"
                    android:layout_width="260dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    app:tabMode="fixed"/>
            <com.hubofallthings.hatappandroid.view.WrapContentHeightViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>