<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#f5f5f5"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/data_plugs_detailed_header"
             android:id="@+id/app_info_header"/>
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding = "15dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"

                  android:background="@drawable/white_layout_without_border"
                  android:orientation="vertical">
        <TextView
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:fontFamily="@font/roboto_bold"
                android:textColor="@color/toolbar_color" android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:id="@+id/description_txt" android:fontFamily="@font/roboto"
                android:textColor="#9a9a9a" android:textSize="12sp"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:background="@drawable/white_layout_without_border"
            android:orientation="vertical" android:id="@+id/screenshot_layout" android:visibility="gone">
        <TextView
                android:text="Screenshots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                android:textColor="@color/toolbar_color" android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/screenshotsRecyclerView"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"

            android:background="@drawable/white_layout_without_border"
            android:orientation="vertical" android:id="@+id/information_layout" android:visibility="visible">
        <TextView
                android:text="Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:fontFamily="@font/roboto_bold"
                android:textColor="@color/toolbar_color" android:textStyle="bold"/>

        <com.hubofallthings.dataplugs.view.NonScrollListView
                android:id="@+id/informationListView"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>