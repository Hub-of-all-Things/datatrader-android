<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@color/white_color"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/insight_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_public_profile"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text=""
              android:fontFamily="@font/roboto"
              android:textColor="#4a556b"
              android:id="@+id/insight_content"/>

    <TextView android:layout_width="50dp" android:layout_height="wrap_content"
              android:textColor="#4a556b"
              android:text="" android:textStyle="bold"
              android:layout_marginEnd="20dp"
              android:fontFamily="@font/roboto_bold" android:id="@+id/insight_badge" android:textAlignment="textEnd"/>
</LinearLayout>