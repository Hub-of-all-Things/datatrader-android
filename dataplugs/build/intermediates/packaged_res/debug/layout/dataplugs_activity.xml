<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dataplugs_layout"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView   android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:paddingEnd="5dp"
                         android:paddingTop="5dp"
                         android:paddingBottom="5dp"
                         android:src="@drawable/back_arrow_toolbar"
                         android:elevation="2dp"
                         android:layout_marginTop="35dp"
                         android:id="@+id/back_button_dataplugs"
                         android:layout_alignParentStart="true"
                         android:layout_marginStart="10dp" android:layout_alignParentTop="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/dataplugs_header_background"
                    android:orientation="vertical"
                    android:visibility="visible">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:text="@string/data_plugs_caps"
                          android:textColor="#ffffff"
                          android:layout_marginTop="43dp"
                          android:textAlignment="center" android:textSize="15sp" android:fontFamily="@font/roboto"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        app:srcCompat="@drawable/data_plugs_icon"/>

                <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"
                        android:text="@string/data_plugs_comment"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#f5f5f5"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/dataPlugs_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:orientation="vertical"
                android:visibility="gone">

            <ListView
                    android:id="@+id/dataPlugListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:clipToPadding="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="10.0sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scrollbarStyle="outsideOverlay">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>