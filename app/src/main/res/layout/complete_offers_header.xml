<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="100dp" android:layout_height="100dp"
                  android:gravity="center"
                  android:orientation="vertical">
        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                   android:src="@drawable/vouchers_earned_icon"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:fontFamily="@font/oswald_bold"
                  android:id="@+id/voucherEarnedValue"
                  android:text="0"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:fontFamily="@font/oswald_light"
                  android:text="VOUCHERS EARNED"
        />

    </LinearLayout>
    <LinearLayout android:layout_width="100dp" android:layout_height="100dp"
                  android:gravity="center"
                  android:orientation="vertical">
        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                   android:src="@drawable/cash_earned_icon"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:fontFamily="@font/oswald_bold"
                  android:id="@+id/cashEarnedValue"
                  android:text="0"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:fontFamily="@font/oswald_light"
                  android:text="CASH EARNED"
        />

    </LinearLayout>
    <LinearLayout android:layout_width="100dp" android:layout_height="100dp"
                  android:gravity="center"
                  android:orientation="vertical">
        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                   android:src="@drawable/pannel_joined_icon"

        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:id="@+id/pannelJoinedValue"
                  android:fontFamily="@font/oswald_bold"
                  android:text="0"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greyLight"
                  android:fontFamily="@font/oswald_light"
                  android:text="PANNELS JOINED"
        />

    </LinearLayout>

</LinearLayout>