<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="142dp"
                                             android:background="@color/darkBlueBackground"
                                             android:paddingTop="@dimen/bar_padding">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/datatrader_give_logo_transp"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView4"
                  android:layout_marginStart="15dp" android:layout_marginBottom="8dp">
        <TextView
                android:text="@string/datatrader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:textColor="#ffffff"
                android:fontFamily="@font/oswald_bold" android:textSize="20sp"/>
        <TextView
                android:text="@string/service_of_hatlab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_light" android:textColor="@color/greyLight"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>