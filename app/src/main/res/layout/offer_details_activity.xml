<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:id="@+id/scroll_view_details">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#ffffff"
                  android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:id="@+id/offerDetailsHeaderLayout">
            <ImageView android:layout_width="40dp"
                       android:layout_height="wrap_content"
                       android:elevation="2dp"
                       android:layout_marginTop="@dimen/bar_padding"
                       android:id="@+id/backButtonOfferDetails"
                       android:src="@drawable/arrow_back_toolbar" android:layout_alignParentStart="true"
                       android:layout_marginStart="10dp" android:layout_alignParentTop="true"/>
            <ImageView
                    android:id="@+id/offerDetailsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:tint="@color/browse_image_filter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/placeholder_browse_offers"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="295dp"
                    android:paddingBottom="29dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">


                <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.052083332"/>

                <android.support.constraint.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.9557292"/>

                <View
                        android:id="@+id/view_dataplugs"
                        android:layout_width="match_parent"
                        android:layout_height="191dp"
                        android:layout_marginTop="222dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="5dp"

                        android:background="@drawable/background_layout_without_border"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:id="@+id/offerDetailsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"

                        android:fontFamily="@font/open_sans_condensed_bold"
                        android:text="@string/your_hat_name"
                        android:textAlignment="center"
                        android:textColor="#4a556c"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="@+id/view_dataplugs"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/expiredDateOfferDetails"
                        app:layout_constraintTop_toBottomOf="@+id/offerDetailsTitle"
                        android:elevation="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                        android:textColor="@color/greyLight" android:fontFamily="@font/open_sans_condensed_light"
                />


            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>
        <TextView
                android:text="Offer details"
                android:layout_marginTop="39dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:textColor="@color/darkBlueBackground" android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="18sp"/>
        <View android:layout_height="3dp"
              android:layout_gravity="center"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
              android:background="@color/loginBtnColor"
              android:layout_width="30dp">
        </View>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsDescriptionTitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/open_sans_condensed_bold" android:textColor="@color/darkBlueBackground"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsDescriptionSubtitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_condensed_light" android:textColor="@color/greyLight"/>
        <TextView
                android:text="Criteria"
                android:layout_marginTop="39dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:textColor="@color/darkBlueBackground" android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="18sp"/>
        <View android:layout_height="3dp"
              android:layout_gravity="center"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
              android:background="@color/loginBtnColor"
              android:layout_width="30dp">
        </View>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsCriteriaTitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/open_sans_condensed_bold" android:textColor="@color/darkBlueBackground"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsCriteriaSubtitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_condensed_light" android:textColor="@color/greyLight"/>
        <TextView
                android:text="Actions required"
                android:layout_marginTop="39dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:textColor="@color/darkBlueBackground" android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="18sp"/>
        <View android:layout_height="3dp"
              android:layout_gravity="center"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
              android:background="@color/loginBtnColor"
              android:layout_width="30dp">
        </View>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsActionsTitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/open_sans_condensed_bold" android:textColor="@color/darkBlueBackground"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/offerDetailsActionsSubtitle"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_condensed_light" android:textColor="@color/greyLight"/>
    </LinearLayout>
</ScrollView>